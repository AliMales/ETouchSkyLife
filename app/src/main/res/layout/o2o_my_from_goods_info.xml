<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <ImageView
                android:id="@+id/o2o_my_form_goods_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:src="@mipmap/o2o_my_from_from_address" />

            <TextView
                android:id="@+id/o2o_my_from_goods_info_address_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/o2o_my_form_goods_info"
                android:text="收货人名称"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/o2o_my_from_goods_info_address_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/o2o_my_from_goods_info_address_name"
                android:paddingLeft="5dp"
                android:text="收货人号码"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/o2o_my_from_goods_info_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/o2o_my_form_goods_info"
                android:layout_toRightOf="@id/o2o_my_form_goods_info"
                android:text="收货人地址" />

        </RelativeLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@mipmap/cut_off_colours" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@mipmap/cut_off_big" />

        <TextView
            android:id="@+id/o2o_my_from_goods_info_shop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="慧e家自营"
            android:textColor="#000000" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@mipmap/cut_off" />

        <TextView
            android:id="@+id/o2o_my_from_goods_info_num"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:paddingLeft="7dp"
            android:text="订单号:201709021455716360" />

        <TextView
            android:id="@+id/o2o_my_from_goods_info_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:paddingLeft="7dp"
            android:text="2017-09-02 14:55:53" />

        <ListView
            android:id="@+id/o2o_my_from_goods_info_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null" />


        <!--分割线-->
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@mipmap/cut_off_big" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:paddingLeft="5dp"
                android:text="配送方式" />


            <TextView
                android:id="@+id/o2o_my_from_goods_info_shipping_fee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:paddingRight="10dp"
                android:text="￥15.00"
                android:textColor="#FF0000" />

            <TextView
                android:id="@+id/o2o_my_from_goods_info_shipping_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/o2o_my_from_goods_info_shipping_fee"
                android:paddingRight="5dp"
                android:text="配送方式"
                android:textColor="#000000" />


        </RelativeLayout>

        <!--分割线-->
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@mipmap/cut_off_big" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:paddingLeft="5dp"
                android:text="支付方式" />


            <ImageView
                android:id="@+id/o2o_my_from_goods_info_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:paddingRight="10dp"
                android:src="@mipmap/right" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/o2o_my_from_goods_info_right"
                android:paddingRight="5dp"
                android:text="财付通"
                android:textColor="#000000" />


        </RelativeLayout>

        <!--分割线-->
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@mipmap/cut_off_big" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:paddingLeft="5dp"
                android:text="总金额"
                android:textColor="#000000" />


            <TextView
                android:id="@+id/o2o_my_from_goods_info_goods_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:paddingRight="10dp"
                android:text="￥100.00"
                android:textColor="#FF0000" />


        </RelativeLayout>
        <!--分割线-->
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@mipmap/cut_off" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:visibility="gone">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:paddingLeft="5dp"
                android:text="运费" />

            <TextView
                android:id="@+id/o2o_my_from_goods_info_fee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:paddingRight="10dp"
                android:text="￥15.00"
                android:textColor="#FF0000" />


        </RelativeLayout>

    </LinearLayout>

</ScrollView>