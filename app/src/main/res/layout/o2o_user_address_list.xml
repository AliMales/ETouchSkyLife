<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#FFFFFF">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#F7F7F7"/>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/o2o_user_address_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="收货人姓名"
            android:textColor="#000000"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/o2o_user_address_phone_num"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:text="联系方式"
            android:textColor="#000000" />
    </LinearLayout>

    <TextView
        android:id="@+id/o2o_user_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="详细收货地址"
        android:layout_marginLeft="10dp"
        android:textColor="#000000" />

    <ImageView
        android:paddingTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@mipmap/cut_off" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/o2o_user_address_default_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/o2o_user_address_default"
            android:layout_centerVertical="true" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:text="默认地址"
            android:textColor="#000000"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/o2o_address_delete_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:drawableLeft="@mipmap/o2o_collect_shop_delete"
            android:text="删除"
            android:textColor="#000000"
            android:layout_centerInParent="true"
            android:padding="10dp"/>

        <TextView
            android:id="@+id/o2o_address_edit_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_toLeftOf="@id/o2o_address_delete_list"
            android:drawableLeft="@mipmap/o2o_user_address_edit"
            android:padding="10dp"
            android:text="编辑"
            android:textColor="#000000"
            android:layout_centerInParent="true" />

    </RelativeLayout>


</LinearLayout>