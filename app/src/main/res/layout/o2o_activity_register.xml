<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@mipmap/o2o_login_bac"
        android:orientation="vertical">
        <!--头部-->
        <RelativeLayout
            android:id="@+id/o2o_activity_register_rl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/left_white" />

            <TextView
                android:id="@+id/private_message_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:paddingLeft="5dp"
                android:text="@string/acc_register_btn"
                android:textColor="#FFFFFF"
                android:textSize="18dp" />


        </RelativeLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingTop="20dp"
            android:src="@mipmap/o2o_login_log" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:orientation="vertical">

        <EditText
            android:id="@+id/o2o_et_user_name_register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:hint="请输入用户名"
            android:textColor="#999999"
            android:textColorHint="#999999" />

        <EditText
            android:id="@+id/o2o_et_email_register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:hint="请输入邮箱"
            android:paddingTop="20dp"
            android:textColor="#999999"
            android:textColorHint="#999999" />

        <EditText
            android:id="@+id/o2o_et_password_register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:hint="请输入密码"
            android:textColor="#999999"
            android:textColorHint="#999999" />

        <EditText
            android:id="@+id/o2o_et_confirm_password_register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:hint="请再次输入密码"
            android:paddingTop="20dp"
            android:textColor="#999999"
            android:textColorHint="#999999" />

        <Button
            android:id="@+id/o2o_bt_registerbt_register"
            android:layout_width="match_parent"
            android:layout_height="50.0dip"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/btn_login_begin_login"
            android:text="@string/acc_register_btn"
            android:textColor="@color/text_white"
            android:textSize="16dip" />

        <TextView
            android:id="@+id/o2o_bt_back_register"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="已有账号直接登录"
            android:textColor="#63AEFF" />


    </LinearLayout>

</LinearLayout>