<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical">

    <!--分割线-->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@mipmap/cut_off_big" />


    <!--店名商品状态-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="#FFFFFF">

        <TextView
            android:id="@+id/my_form_list_store"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="store_name"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/my_form_list_statue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="good_statue"
            android:textColor="#E22018" />


    </RelativeLayout>


    <!--分割线-->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@mipmap/cut_off" />

    <!--订单信息-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/goods_num"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:text="订单号:201709021455716360" />

        <TextView
            android:id="@+id/goods_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:text="2017-09-02 14:55:53" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@mipmap/cut_off" />

    </LinearLayout>


    <ListView
        android:id="@+id/my_form_list_goods_list_fl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <!--商品数量价格-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/mu_form_tv_goods_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="10dp"
                android:text="共X款商品" />

            <TextView
                android:id="@+id/mu_form_tv_goods_num_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="合计:￥xxxx.00" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:orientation="horizontal"
            android:padding="11dp">

            <Button
                android:id="@+id/mu_form_bt_cancel_form"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/o2o_my_form_button_bac"
                android:text="取消订单 "
                android:textSize="15dp" />

        </LinearLayout>

    </LinearLayout>
</LinearLayout>