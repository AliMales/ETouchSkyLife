<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/o2o_cou_money"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#FF4B53"
            android:gravity="center"
            android:text="￥100"
            android:textColor="#FFFFFF"
            android:textSize="20dp" />

        <LinearLayout
            android:layout_margin="5dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:background="#FFFFFF"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/o2o_cou_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="注册立即送100元优惠券"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/o2o_cou_man"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="满2000元可用"
                android:textColor="#FF4B53" />

            <TextView
                android:id="@+id/o2o_discount_coupon_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2017-02-28 至 2021-03-22"
                android:textColor="#AAAAAA" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#F7F7F7"/>
</LinearLayout>